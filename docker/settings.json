{
    // VScode Settings - https://code.visualstudio.com/docs/getstarted/settings
    
    ///////////////////////////////////////////////////////////////////////////
    // General Settings
    ///////////////////////////////////////////////////////////////////////////

    "files.autoSave": "off",
    
    // Workbench Settings
    // ========================================================================
    
    // Color themes
    "workbench.colorTheme": "Default Dark+",
    "workbench.preferredDarkColorTheme": "Default Dark+",
    "workbench.preferredHighContrastColorTheme": "Default High Contrast",
    
    "workbench.settings.editor": "ui",
    "workbench.startupEditor": "none",

    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        },
        {
            "viewType": "jupyter-notebook",
            "filenamePattern": "*.ipynb"
        }
    ],

    // Editor
    // ========================================================================
    "editor.fontSize": 12,
    "editor.mouseWheelZoom": true,
    "editor.largeFileOptimizations": false,
    "editor.guides.bracketPairs": true,
        
    // Terminal
    // ========================================================================
    "terminal.integrated.shell.linux": "REPLACE_BASH_PATH",
    "terminal.integrated.confirmOnExit": true,
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.scrollback": 3000,

    // Security
    // ========================================================================
    "security.workspace.trust.startupPrompt": "once",

    // Telemtry
    // ========================================================================
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    ///////////////////////////////////////////////////////////////////////////
    // Extension & Language Settings
    ///////////////////////////////////////////////////////////////////////////

    // General
    "extensions.autoUpdate": false,
        
    // Python (https://code.visualstudio.com/docs/python/settings-reference)
    // =======================================================================
    // Language Settings
    // "[python]": {
    //     "editor.formatOnSave": true,
    //     "editor.formatOnPaste": true
    //     },

    // Path related
    // "python.pythonPath": "/opt/conda/bin/python",
    
    //"python.linting.pylintArgs": [
    //    "--extension-pkg-whitelist=torch"
    //],
    //"python.dataScience.sendSelectionToInteractiveWindow": true,

    //"python.dataScience.debugJustMyCode": false,
    "python.showStartPage": false,
    
    // Markdown
    // =======================================================================
    // Language Settings
    // "[markdown]": {
    //     "editor.wordWrap": "on",
    //     "editor.quickSuggestions": false,
    //     "editor.formatOnSave": true,
    //     "editor.renderWhitespace": "all",
    //     "editor.acceptSuggestionOnEnter": "off"
    //     },   
    
    // "markdown.preview.fontSize": 12,
    // "markdown.preview.lineHeight": 1.5,
    "markdown.preview.doubleClickToSwitchToEditor": false,
    
    // Jupyter
    "jupyter.alwaysTrustNotebooks": true,

    // Git
    // =======================================================================
    "git.autofetch": true,
    "git.autofetchPeriod": 300,
    "git.fetchOnPull": true,
    "git.defaultCloneDirectory": "/workspace",
    "git.openAfterClone": "whenNoFolderOpen",
    "git.terminalAuthentication": false,
    "github.gitAuthentication": false,
    "git.confirmSync": false,
   
    // Didact
    // =======================================================================
    "didact.openDefaultTutorialAtStartup": true,
    "didact.defaultUrl": "/workspace/readme.didact.md"
}
